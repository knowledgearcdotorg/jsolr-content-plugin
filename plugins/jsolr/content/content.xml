<?xml version="1.0" encoding="UTF-8"?>
<extension version="3.4" type="plugin" group="jsolr" method="upgrade">
    <name>plg_jsolr_content</name>
    <creationDate>2016-04-21</creationDate>
    <author>KnowledgeArc Ltd</author>
    <authorEmail>development@knowledgarc.com</authorEmail>
    <authorUrl>http://www.knowledgearc.org</authorUrl>
    <copyright>>Copyright (C) 2012-2014 KnowledgeArc Ltd. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html</license>
    <version>3.0.0-alpha</version>
    <description>PLG_JSOLR_CONTENT_XML_DESCRIPTION</description>
    <files>
        <filename plugin="content">content.php</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_jsolr_content.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_jsolr_content.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="categories"
                    type="category"
                    description="PLG_JSOLR_CONTENT_FIELD_CATEGORIES_DESC"
                    extension="com_content"
                    label="JCATEGORIES"
                    multiple="true"
                    size="10"
                    default="1">
                    <option value="1">JOPTION_ALL_CATEGORIES</option>
                </field>

                <field
                    name="description"
                    type="list"
                    description="PLG_JSOLR_CONTENT_FIELD_DESCRIPTION_DESC"
                    label="PLG_JSOLR_CONTENT_FIELD_DESCRIPTION_LABEL"
                    size="10"
                    default="metadescintrotext">
                    <option value="metadesc">PLG_JSOLR_CONTENT_FIELD_DESCRIPTION_METADESC</option>
                    <option value="introtext">PLG_JSOLR_CONTENT_FIELD_DESCRIPTION_INTROTEXT</option>
                    <option
                        value="metadescintrotext">PLG_JSOLR_CONTENT_FIELD_DESCRIPTION_METADESCINTROTEXT</option>
                    <option
                        value="introtextmetadesc">PLG_JSOLR_CONTENT_FIELD_DESCRIPTION_INTROTEXTMETADESC</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
